{
    "format_version":"1.10.0",
    "animation_controllers":{
	"controller.animation.bucket_splash":{
	    "states":{
		"default":{
		    "animations":["drip"],
		    "transitions":[
			{"in_air":"!q.is_on_ground"}
		    ]
		},
		"base":{
		    "particle_effects":[{"effect":"splash","locator":"lead_hold"}],
		    "sound_effects":[{"effect":"splash"}],
		    "animations":["drip","splash"],
		    "transitions":[
			{"in_air":"!q.is_on_ground"}
		    ]
		},
		"in_air":{
		    "transitions":[
			{"base":"q.is_on_ground && !q.is_in_water"}
		    ]
		}
	    }
	},
	"controller.animation.bucket_fluid":{
	    "states":{
		"default":{
		    "blend_transition":0.3,
		    "transitions":[
			{"flow":"q.modified_move_speed>0.2"}
		    ]
		},
		"flow":{
		    "animations":["shake"],
		    "blend_transition":0.2,
		    "transitions":[
			{"rest":"q.modified_move_speed<0.1"}
		    ]
		},
		"rest":{
		    "animations":["shake_end"],
		    "blend_transition":0.3,
		    "transitions":[
			{"flow":"q.modified_move_speed>0.2"},
			{"default":"q.any_animation_finished"}
		    ]
		}
	    }
	},
	"controller.animation.bucket_perspective":{
	    "states":{
		"default":{
		    "transitions":[
			{"1st":"c.is_first_person"},
			{"3rd":"1"}
		    ]
		},
		"1st":{
		    "animations":["1st"],
		    "transitions":[
			{"3rd":"!c.is_first_person"}
		    ]
		},
		"3rd":{
		    "animations":["3rd","bob",{"splash_particles":"!q.is_in_ui"},"sneaking_ct"],
		    "transitions":[
			{"1st":"c.is_first_person"}
		    ]
		}
	    }
	},
	"controller.animation.bucket_in_air":{
	    "states":{
		"default":{
		    "transitions":[
			{"dn":"q.vertical_speed<0 && !q.is_in_water"}
		    ]
		},
		"dn":{
		    "blend_transition":0.06,
		    "animations":["fall","timer"],
		    "transitions":[
			{"default":"q.is_in_water"},
			{"land":"q.vertical_speed>=0 || (q.is_on_ground && q.any_animation_finished)"},
			{"soft_landing":"q.is_on_ground"}
		    ]
		},
		"land":{
		    "blend_transition":0.16,
		    "animations":["land"],
		    "transitions":[
			{"default":"q.any_animation_finished"},
			{"dn":"!q.is_on_ground && q.vertical_speed<0"}
		    ]
		},
		"soft_landing":{
		    "blend_transition":0.16,
		    "animations":["land_soft"],
		    "transitions":[
			{"default":"q.any_animation_finished"},
			{"dn":"!q.is_on_ground && q.vertical_speed<0"}
		    ]
		}
	    }
	},
	"controller.animation.bucket_sneak":{
	    "states":{
		"default":{
		    "transitions":[
			{"sneak":"q.is_sneaking"}
		    ]
		},
		"sneak":{
		    "animations":["sneak"],
		    "blend_transition":0.16,
		    "transitions":[
			{"default":"!q.is_sneaking"}
		    ]
		}
	    }
	}
    }
}
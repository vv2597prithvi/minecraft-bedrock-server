{
  "format_version":"1.10.0",
  "minecraft:attachable":{
    "description":{
      "identifier":"minecraft:bow",
      "materials":{
	"default":"entity_alphatest",
	"enchanted":"entity_alphatest_glint",
	"arrow":"entity_alphatest_one_sided"
      },
      "textures":{
	"default":"textures/items/bow/bow_0",
	"bow_1":"textures/items/bow/bow_1",
	"bow_2":"textures/items/bow/bow_2",
	"bow_3":"textures/items/bow/bow_3",
	"bow_4":"textures/items/bow/bow_4",
	"bow_5":"textures/items/bow/bow_5",
	"bow_6":"textures/items/bow/bow_6",
	"arrow":"textures/entity/projectile/arrow",
	"enchanted":"textures/misc/enchanted_item_glint"
      },
      "geometry":{
	"default":"geometry.bow",
	"pulling_1":"geometry.bow_pull_1",
	"pulling_2":"geometry.bow_pull_2",
	"pulling_3":"geometry.bow_pull_3",
	"pulling_4":"geometry.bow_pull_4",
	"pulling_5":"geometry.bow_pull_5",
	"pulling_6":"geometry.bow_pull_6",
	"arrow":"geometry.arrow_from_bow"
      },
      "animations":{
	"draw":"animation.bow.draw",
	"hold":"animation.bow.wield",
	"wield":"animation.bow.wield_first_person",
	"pull":"animation.bow.wield_first_person_pull",
	"shoot":"animation.bow.shoot_first_person",
	"anim_frame":"controller.animation.bow.player"
      },
      "particle_effects":{
	"charging":"act:bow_charging",
	"charged":"act:bow_charged"
      },
      "sound_effects":{
	"charged":"item.charged"
      },
      "scripts":{
	"initialize":["v.anim_frame = 0;"],
	"pre_animation":["0;"],
	"animate":[
	  {"hold":"!c.is_first_person"},
	  {"wield":"c.is_first_person"},
	  {"pull":"q.main_hand_item_use_duration>0 && c.is_first_person"},
	  "anim_frame"
	]
      },
      "render_controllers":["controller.render.bow_anim",{"controller.render.bow_arrow":"q.main_hand_item_use_duration>0"}]
    }
  }
}

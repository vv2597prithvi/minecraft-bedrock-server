{
  "format_version":"1.10.0",
  "minecraft:attachable":{
    "description":{
      "identifier":"minecraft:pufferfish_bucket",
      "materials":{
	"default":"entity_alphatest_one_sided","liquid":"entity_alphablend","splash":"entity_alphatest"
      },
      "textures":{
	"default":"textures/models/held_item/bucket/bucket",
	"pufferfish":"textures/entity/fish/puff"
      },
      "geometry":{
	"default":"geometry.bucket_drinkable",
	"pufferfish":"geometry.bucket_pufferfish"
      },
      "particle_effects":{
	"splash":"act:bucket_splash_water",
	"drip":"act:bucket_drip_water"
      },
      "sound_effects":{
	"splash":"bucket.splash_mob",
	"squish":"bucket.pufferfish.squish",
	"inflate":"mob.pufferfish.inflate",
	"shake":"bucket.shake"
      },
      "render_controllers":["controller.render.water_bucket","controller.render.pufferfish_bucket"],
      "animations":{
	"mob_appear":"animation.puffer.appear",
	"fall":"animation.puffer.fall",
	"land":"animation.puffer.land",
	"land_soft":"animation.puffer.land_soft",
	"timer":"animation.slime.timer_jump",
	"drip":"animation.bucket.drip",
	"3rd":"animation.item.bucket",
	"1st":"animation.item.first_person_bucket",
	"hold_villager":"animation.item.bucket_villager",
	"controller_in_air":"controller.animation.bucket_in_air"
      },
      "scripts":{
	"animate":[
	  "controller_in_air",
	  {"drip":"!c.is_first_person"},
	  {"3rd":"!c.is_first_person && q.owner_identifier!='minecraft:wandering_trader'"},
	  {"hold_villager":"q.owner_identifier=='minecraft:wandering_trader'"},
	  {"1st":"c.is_first_person"},
	  "mob_appear"
	]
      }
    }
  }
}

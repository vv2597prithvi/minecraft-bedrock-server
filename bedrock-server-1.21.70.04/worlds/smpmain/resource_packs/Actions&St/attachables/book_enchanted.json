{
  "format_version":"1.10.0",
  "minecraft:attachable":{
    "description":{
      "identifier":"minecraft:enchanted_book",
      "materials":{
	"default":"entity",
	"enchanted":"entity_glint"
      },
      "textures":{
	"default":"textures/models/held_item/book/book",
        "enchanted":"textures/misc/enchanted_sharp_glint"
      },
      "geometry":{
	"default":"geometry.book_enchanted",
	"prop":"geometry.book_pile"
      },
      "render_controllers":["controller.render.item_default"],
      "animations":{
	"3rd":"animation.item.book",
	"first_person":"animation.item.first_person_book"
      },
      "scripts":{
	"animate":[
	  {"3rd":"!c.is_first_person && !q.is_name_any('§§')"},
	  {"first_person":"c.is_first_person"}
	]
      }
    }
  }
}

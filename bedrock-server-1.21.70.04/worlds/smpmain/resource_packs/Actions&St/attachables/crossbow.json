{
  "format_version":"1.10.0",
  "minecraft:attachable":{
    "description":{
      "identifier":"minecraft:crossbow",
      "materials":{
	"default":"entity",
	"enchanted":"entity_glint"
      },
      "textures":{
	"default":"textures/items/crossbow_standby",
	"crossbow_pulling_0":"textures/items/crossbow_pulling_0",
	"crossbow_pulling_1":"textures/items/crossbow_pulling_1",
	"crossbow_pulling_2":"textures/items/crossbow_pulling_2",
	"arrow":"textures/entity/projectile/arrow",
	"rocket":"textures/entity/rocket",
	"enchanted":"textures/misc/enchanted_item_glint"
      },
      "geometry": {
	"default": "geometry.crossbow_standby",
	"crossbow_pulling_0":"geometry.crossbow_pulling_0",
	"crossbow_pulling_1":"geometry.crossbow_pulling_1",
	"crossbow_pulling_2":"geometry.crossbow_pulling_2",
	"arrow":"geometry.arrow_mesh",
	"rocket":"geometry.rocket"
      },
      "animations": {
	"1st":"animation.crossbow.wield_first_person",
	"3rd":"animation.crossbow.wield_third_person",
	"charging":"animation.crossbow.charging",
	"charge":"controller.animation.crossbow.charge"
      },
      "particle_effects":{
	"charging":"act:crossbow_charging",
	"charged":"act:crossbow_charged"
      },
      "scripts":{
	"pre_animation":["0;"],
	"animate":[
	  {"1st":"c.is_first_person"},
	  {"3rd":"!c.is_first_person"},
	  "charge"
	]
      },
      "render_controllers":[
	"controller.render.crossbow_anim",
	{"controller.render.crossbow_arrow":"query.get_animation_frame==4"},
	{"controller.render.crossbow_rocket":"query.get_animation_frame==5"}
      ]
    }
  }
}

{
  "format_version":"1.10.0",
  "minecraft:attachable":{
    "description":{
      "identifier":"minecraft:lit_pumpkin",
      "materials":{
	"default":"entity_emissive"
      },
      "textures":{
	"default":"textures/models/blox/lit_pumpkin"
      },
      "geometry":{
	"default":"geometry.blukhed"
      },
      "render_controllers":["controller.render.default"],
      "animations":{
	"3rd":"animation.block.third_person",
	"1st":"animation.block.first_person",
	"hat":"animation.block.blockhead"
      },
      "scripts":{
        "parent_setup": "variable.helmet_layer_visible = q.is_item_name_any('slot.armor.head','');",
	"animate":[
	  {"3rd":"!c.is_first_person && c.item_slot!='head' && !q.is_name_any('§§')"},
	  {"1st":"c.is_first_person"},
	  {"hat":"c.item_slot=='head'"}
	]
      }
    }
  }
}

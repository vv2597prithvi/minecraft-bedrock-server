{
  "format_version":"1.10.0",
  "minecraft:attachable":{
    "description":{
      "identifier":"minecraft:writable_book",
      "materials":{
	"default":"entity_alphatest_one_sided"
      },
      "textures":{
	"default":"textures/models/held_item/book/book_n_quill"
      },
      "geometry":{
	"default":"geometry.book_n_quill"
      },
      "sound_effects":{
	"open":"book.open",
	"close":"book.close"
      },
      "render_controllers":["controller.render.default"],
      "animations":{
	"3rd":"animation.item.book",
	"1st":"animation.item.first_person_book",
	"3rd_open":"animation.book.third_person_open",
	"1st_open":"animation.book.first_person_open",
	"3rd_close":"animation.book.third_person_close",
	"1st_close":"animation.book.first_person_close",
	"book_controller":"controller.animation.book"
      },
      "scripts":{
	"animate":[
	  {"3rd":"!c.is_first_person && !q.is_name_any('§§')"},
	  {"1st":"c.is_first_person"},
	  {"book_controller":"!q.is_name_any('§§')"}
	]
      }
    }
  }
}
